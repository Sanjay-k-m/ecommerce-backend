# -------------------------------------------
# Server configuration (Required)
# -------------------------------------------
NODE_ENV=development                    # Required: 'development' | 'production' | 'test'
PORT=3000                             # Required: port number for server

# -------------------------------------------
# Database configuration (Required)
# -------------------------------------------

# Example:
# - PostgreSQL: postgresql://user:password@host:port/database?schema=public
# - MySQL: mysql://user:password@host:port/database
# - MongoDB: mongodb://user:password@host:port/database
# - etc.

DATABASE_URL=

# -------------------------------------------
# JWT secrets and expiration (Required)
# -------------------------------------------
JWT_ACCESS_TOKEN_SECRET=your-secret-for-access-token               # Required: min 10 chars secret for access token
JWT_ACCESS_TOKEN_EXPIRES_IN=15m                          # Optional: default '15m' (e.g., 15m, 1h, 7d)
JWT_ACCESS_TOKEN_IGNORE_EXPIRATION=false                 # Optional: default false (true/false)
JWT_REFRESH_TOKEN_SECRET=your-secret-for-refreshing-token           # Required: min 10 chars secret for refresh token
JWT_REFRESH_TOKEN_EXPIRES_IN=7d                          # Optional: default '7d'

# -------------------------------------------
# Mail provider configuration (Required)
# -------------------------------------------
MAIL_HOST=your-smtp-host              # Required: SMTP host
MAIL_PORT=your-smtp-port              # Required: SMTP port
MAIL_SECURE=false                   # Optional: default false (true/false)
MAIL_USER=your-smtp-user             # Required: SMTP user
MAIL_PASS=your-smtp-password         # Required: SMTP password
MAIL_FROM=your-from-email             # Optional: default 'your-from-email'

# -------------------------------------------
# CORS configuration (Optional)
# -------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://example.com    # Optional: default 'http://localhost:3000'

# -------------------------------------------
# Feature toggles (Optional)
# -------------------------------------------
ENABLE_HELMET=true                      # Optional: default true (true/false)
ENABLE_SWAGGER=true                    # Optional: default false (true/false)
ENABLE_LOGGING_INTERCEPTOR=true         # Optional: default true (true/false)
ENABLE_GLOBAL_VALIDATION_PIPE=true     # Optional: default true (true/false)
COMPRESSION_ENABLED=true                # Optional: default true (true/false)
ENABLE_THROTTLE=true                   # Optional: default true (true/false)

# -------------------------------------------
# Compression settings (Optional)
# -------------------------------------------
COMPRESSION_THRESHOLD=1024              # Optional: default 1024 (bytes)
COMPRESSION_LEVEL=6                     # Optional: default 6 (0-9)

# -------------------------------------------
# Throttler (rate limiter) settings (Optional)
# -------------------------------------------
THROTTLE_TTL_MS=60000                   # Optional: default 60000 (ms)
THROTTLE_LIMIT=10                       # Optional: default 10 (requests)
THROTTLE_BLOCK_DURATION_MS=300000       # Optional: default 300000 (ms)

# -------------------------------------------
# API Versioning (Optional)
# -------------------------------------------
API_DEFAULT_VERSION=1                   # Optional: default '1'

# -------------------------------------------
# Storage Driver (Required: 'local' or 's3')
# -------------------------------------------
STORAGE_DRIVER=local                     # Use 'local' for local storage, 's3' for AWS S3

# -------------------------------------------
# Local Storage Settings (Used if STORAGE_DRIVER=local)
# -------------------------------------------
LOCAL_STORAGE_PATH=./uploads            # Directory for local file storage

# -------------------------------------------
# AWS S3 Settings (Used if STORAGE_DRIVER=s3)
# -------------------------------------------
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE   # Dummy AWS access key (replace with real key for S3)
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY  # Dummy AWS secret key
AWS_REGION=ap-south-1                    # AWS region (default: ap-south-1)
AWS_S3_BUCKET=my-test-bucket-123         # Dummy S3 bucket name (replace with real bucket)
# -------------------------------------------
# Multer Settings for File Uploads
# -------------------------------------------

# Image Uploads
MULTER_IMAGE_MAX=5242880                  # Default: 5242880 (5MB)
# Allowed mime types are hardcoded in config: ['image/jpeg', 'image/png', 'image/webp']

# Video Uploads
MULTER_VIDEO_MAX=209715200                # Default: 209715200 (200MB)
# Allowed mime types are hardcoded in config: ['video/mp4', 'video/webm']